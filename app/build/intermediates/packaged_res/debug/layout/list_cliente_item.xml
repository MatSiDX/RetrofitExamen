<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <!-- TextView para el nombre del cliente -->
  <TextView
      android:id="@+id/idnombre"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:text="Nombre del Cliente"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <!-- TextView para el apellido -->
  <TextView
      android:id="@+id/idapellido"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:paddingBottom="20dp"
      android:text="Apellido"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/idnombre" />

  <!-- TextView para el teléfono -->

  <!-- Línea divisoria -->

  <TextView
      android:id="@+id/idtelefono"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="84dp"
      android:text="Telefono"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="#C2C2C2"
      app:layout_constraintTop_toBottomOf="parent"
      tools:layout_editor_absoluteX="0dp" />

  <!-- ImageView para el ícono de eliminar -->
  <!-- Reemplaza con tu recurso de imagen para eliminar -->


  <!-- ImageView para el ícono de editar -->

  <ImageView
      android:id="@+id/icon_eliminar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:layout_marginEnd="20dp"
      android:src="@drawable/baseline_delete_24"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/idtelefono"></ImageView>

  <ImageView
      android:id="@+id/icon_editar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:layout_marginEnd="14dp"
      android:src="@drawable/edit"
      app:layout_constraintEnd_toStartOf="@+id/icon_eliminar"
      app:layout_constraintTop_toBottomOf="@+id/idtelefono"></ImageView><!-- Reemplaza con tu recurso de imagen para editar -->


</androidx.constraintlayout.widget.ConstraintLayout>
